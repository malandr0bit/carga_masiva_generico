# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/carga_masiva_db
# Para SQLite (desarrollo): sqlite:///./carga_masiva.db
# Para MySQL: mysql+pymysql://user:password@localhost:3306/dbname

# Application Settings
APP_NAME="Sistema de Carga Masiva Gen√©rica"
APP_VERSION=1.0.0
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Storage Configuration
STORAGE_TYPE=local  # Opciones: local, firebase, s3
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB en bytes

# Firebase Storage (si usas firebase)
# FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json
# FIREBASE_BUCKET_NAME=your-bucket-name

# AWS S3 (si usas S3)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_BUCKET_NAME=your-bucket-name
# AWS_REGION=us-east-1

# Security
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Logging
LOG_LEVEL=INFO
